algoritmo in2;

variáveis
	x	: inteiro;
fim-variáveis

início
	escreva_ln("Digite um valor inteiro para ser comparado com 3");
	leia(x);
	
	escreva("O valor de x lido foi: ");
	escreva_ln(x);
	
	se x = 3 então
		escreva(x);
	senão
		escreva("a");
		
	x := 4;
	
	enquanto verdadeiro faça{
		x := x + 1;
		y := x; // y não foi declarada
		se x = 8 então
			brecar;		
	}
fim

